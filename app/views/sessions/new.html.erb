	<div class="container login-box">

			<div class="col-md-4 col-md-offset-4 centered login">

				<h1 class="text-center">Log In</h1>

					<%= form_for :login, :html => { :class => "form-signin" } do |f|  %>

					<div>
						<%= f.label :email, :class => "control-label" %>
						<%= f.text_field :email, class: "form-control" %>
					</div>

					<div>
						<%= f.label :password, class: "control-label" %>
						<%= f.password_field :password, class: "form-control" %>
					</div>

					<div class="buttons">

						<%= f.submit "Log In", class: "btn-sm btn-block btn-default btn-primary" %>
						<br>

						<button class="btn-sm btn-block btn-default btn-success">
							<%= link_to "Join TennisAnyone", signup_path %>
						</button>

					</div>

			</div>

	</div>

		 

<% end %>