<!DOCTYPE html>
<html>
<head>
  <title>Tennisanyone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <!-- Facilitates render scaling using Bootstrap -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>

	<div class="container-fluid">

		<header class="row">

			<!-- The navigation bar -->

		<nav class="navbar navbar-inverse">

			<div class="navbar-header navbar-fixed-top">
				
					<div class="navbar-brand"><%= link_to "Tennis Anyone", root_path %> </div>
						<ul class="nav navbar-nav">
							<% if current_user %>
								<li class="navbar-text">Hi <%= current_user.name %>!</li>
								<li class="pull-left"><%= link_to "My profile", user_path(current_user) %></li>
								<li class="pull-leftt"><%= link_to "Log out", logout_path, method: :delete %></li>
							<% else %>
								<li class="pull-right"><%= link_to "Sign up", signup_path %></li>
								<li class="pull-right"><%= link_to "Log in", login_path %></li>
							<% end %>
								<li class="pull-right"><%= link_to "Search", users_path %></li>
						</ul>
			</div>

		</nav>

		</header>

		<footer class="row">

			<div class="footer_menu">
				
			</div>
		</footer>
	
<%= yield %>  <!-- Should stay at the bottom of the page --> 

</body>
</html>
